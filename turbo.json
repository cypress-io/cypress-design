{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "tsconfig.json",
    "tsconfig.*.json",
    "components/*.rollup.config.mjs",
    "components/*.rollup.mjs",
    "components/*.vite.config.ts"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "tsconfig.json",
        "tsconfig.build.json",
        "**/*.vue",
        "**/*.tsx",
        "**/*.mjs",
        "**/*.ts",
        "**/*.svg",
        "svgo-plugins/*.js",
        "src/**/*.ts",
        "src/**/*.ts",
        "src/**/*.mjs",
        "src/**/*.js",
        "icons-*/*.svg",
        "!*.cy.tsx",
        "!*.rootstory.tsx",
        "!dist/**/*.mjs",
        "!dist/**/*.d.ts"
      ],
      "outputs": [
        "dist/**"
      ]
    }
  }
}