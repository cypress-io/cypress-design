{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "tsconfig.json",
        "tsconfig.build.json",
        "*.vue",
        "*.tsx",
        "*.mjs",
        "*.ts",
        "src/*.ts",
        "src/*.mjs",
        "src/*.js",
        "!*.cy.tsx",
        "!*.rootstory.tsx"
      ],
      "outputs": [
        "dist/**"
      ]
    }
  },
  "globalDependencies": [
    "tsconfig.json",
    "tsconfig.*.json"
  ]
}