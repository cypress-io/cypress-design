{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "strict": true,
    "downlevelIteration": true
  }
}
