{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "composite": true
  },
  "include": [
    "components/*/react/**/*.tsx",
    "components/*/react/**/*.ts",
    "components/*/shared-assertions.ts",
    "components/*/useDisabledVariant.ts",
    "cypress/**/*.ts"
  ]
}
