{
  "name": "@cypress-design/design",
  "version": "0.0.0",
  "description": "Design system for the marketing site, app and cloud",
  "main": "index.js",
  "repository": "https://github.com/cypress-io/design-system.git",
  "author": "Bart Ledoux <ledouxb@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "components/*/react",
    "components/*/vue",
    "css",
    "storybook/*",
    "test/*"
  ],
  "scripts": {
    "build": "yarn build:css && yarn build:intro && yarn build:react && yarn build:vue",
    "build:intro": "yarn workspace storybook build",
    "build:react": "yarn workspace storybook-react build",
    "build:vue": "yarn workspace storybook-vue build",
    "build:components": "node components/build-components.js",
    "start": "concurrently yarn:start:*",
    "start:intro": "yarn workspace storybook start",
    "start:react": "yarn workspace storybook-react start",
    "start:vue": "yarn workspace storybook-vue start",
    "build:css": "yarn workspace @cypress-design/css build",
    "postinstall": "yarn build:css",
    "new:component": "hygen component new"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-typescript": "^8.3.2",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vitejs/plugin-vue-jsx": "^1.3.9",
    "@vue/tsconfig": "^0.1.3",
    "execa": "^6.1.0",
    "concurrently": "^7.1.0",
    "hygen": "^6.2.0",
    "prettier": "^2.6.2",
    "rollup": "^2.70.2",
    "typescript": "~4.6.3",
    "vite": "^2.9.1",
    "vue-tsc": "^0.33.9"
  }
}
