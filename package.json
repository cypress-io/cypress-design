{
  "name": "@cypress-design/design",
  "version": "0.0.0",
  "description": "Design system for the marketing site, app and cloud",
  "main": "index.js",
  "repository": "https://github.com/cypress-io/design-system.git",
  "author": "Bart Ledoux <ledouxb@gmail.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "components/*/react",
    "components/*/vue",
    "packages/*",
    "css",
    "icon-registry",
    "storybook/*",
    "test/*"
  ],
  "scripts": {
    "cy": "cypress open --component",
    "cy:run": "cypress run --component",
    "test": "vitest",
    "build:components": "turbo run build --filter=\"@cypress-design/vue-*\" --filter=\"@cypress-design/react-*\"",
    "dev": "yarn start",
    "start": "NODE_ENV=development concurrently \"vue-docgen --watch -c docs/docgen/docgen.config.cjs\" \"vitepress dev docs\"",
    "build:docs": "vue-docgen -c docs/docgen/docgen.config.cjs && yarn build:components && ./vercel-build-docs.sh",
    "postinstall": "yarn husky install",
    "new:component": "hygen component new"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@cypress-design/css": "*",
    "@cypress-design/react-icon": "*",
    "@cypress-design/vue-docmenu": "*",
    "@cypress-design/vue-icon": "*",
    "@cypress-design/vue-tooltip": "*",
    "@cypress/vite-dev-server": "^5.0.5",
    "@percy/cli": "1.21.0",
    "@percy/cypress": "3.1.2",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-sucrase": "^5.0.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/dedent": "^0.7.0",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/tsconfig": "^0.1.3",
    "@vueuse/integrations": "^9.13.0",
    "axe-core": "^4.6.3",
    "concurrently": "^8.0.1",
    "cypress": "^12.9.0",
    "cypress-axe": "^1.4.0",
    "cypress-real-events": "^1.7.6",
    "dedent": "^0.7.0",
    "es-module-lexer": "^1.2.1",
    "eslint": "^8.37.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "execa": "^7.1.1",
    "globby": "^13.1.3",
    "husky": "^8.0.3",
    "hygen": "^6.2.11",
    "lint-staged": ">=13",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "react": "18",
    "react-docgen-typescript": "^2.2.2",
    "react-dom": "18",
    "react-live-runner": "^1.0.5",
    "rollup": "^2.75.7",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "turbo": "^1.8.8",
    "typescript": "5.0.3",
    "universal-cookie": "^4.0.4",
    "vite": "4.2.1",
    "vitepress": "1.0.0-alpha.65",
    "vitest": "^0.29.8",
    "vue": "3.2.47",
    "vue-component-meta": "^1.2.0",
    "vue-docgen-cli": "^4.66.0",
    "vue-eslint-parser": "^9.1.1",
    "vue-live": "^2.4.10",
    "vue-tsc": "^1.2.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": "eslint --cache --fix",
    "*.{js,ts,jsx,tsx,vue,css,md}": "prettier --write"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  }
}