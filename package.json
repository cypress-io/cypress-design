{
	"name": "@cypress-design/design",
	"version": "0.0.0",
	"description": "Design system for the marketing site, app and cloud",
	"main": "index.js",
	"repository": "https://github.com/cypress-io/design-system.git",
	"author": "Bart Ledoux <ledouxb@gmail.com>",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"components/*/react",
		"components/*/vue",
		"packages/*",
		"css",
		"icon-registry",
		"storybook/*",
		"test/*"
	],
	"scripts": {
		"cy": "cypress open --component",
		"cy:run": "cypress run --component",
		"test": "vitest",
		"build:storybook": "yarn build:icons && yarn build:components && yarn build:css && yarn build:storybook:intro --quiet && yarn build:storybook:react --quiet && yarn build:storybook:vue --quiet && yarn fix:storybook:order ./dist/react/stories.json && yarn fix:storybook:order ./dist/vue/stories.json",
		"build:storybook:intro": "yarn workspace storybook build",
		"build:storybook:react": "yarn workspace storybook-react build",
		"build:storybook:vue": "yarn workspace storybook-vue build",
		"fix:storybook:order": "node ./storybook/fixStoriesOrder.js",
		"build:components": "node components/build-components.js",
		"start": "concurrently yarn:storybook:*",
		"storybook:intro": "yarn workspace storybook start",
		"storybook:react": "yarn workspace storybook-react start --no-open",
		"storybook:vue": "yarn workspace storybook-vue start --no-open",
		"build:css": "yarn workspace @cypress-design/css build",
		"build:icons": "yarn workspace @cypress-design/icon-registry build && yarn workspace @cypress-design/react-icon build:codegen && yarn workspace @cypress-design/vue-icon build:codegen",
		"build:animation": "yarn workspace @cypress-design/details-animation build",
		"postinstall": "yarn husky install && yarn build:css && yarn build:icons && yarn build:animation",
		"new:component": "hygen component new"
	},
	"dependencies": {
		"@changesets/changelog-github": "^0.4.4",
		"@changesets/cli": "^2.22.0",
		"@cypress/vite-dev-server": "^2.2.2",
		"@cypress-design/css": "*",
		"@percy/cli": "1.18.0",
		"@percy/cypress": "3.1.2",
		"@rollup/plugin-commonjs": "^22.0.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-sucrase": "^4.0.4",
		"@rollup/plugin-typescript": "^8.3.3",
		"@types/dedent": "^0.7.0",
		"@types/react": "17",
		"@types/react-dom": "17",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vitejs/plugin-vue": "^2.3.1",
		"@vitejs/plugin-vue-jsx": "^1.3.9",
		"@vue/tsconfig": "^0.1.3",
		"axe-core": "^4.4.2",
		"concurrently": "^7.1.0",
		"cypress": "^12.5.1",
		"cypress-axe": "^1.3.0",
		"cypress-real-events": "^1.7.6",
		"dedent": "^0.7.0",
		"eslint": "^8.17.0",
		"eslint-plugin-no-only-tests": "^2.6.0",
		"execa": "^6.1.0",
		"husky": "^8.0.1",
		"hygen": "^6.2.0",
		"lint-staged": ">=10",
		"postcss": "^8.4.21",
		"prettier": "^2.6.2",
		"rollup": "^2.75.7",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-sourcemaps": "^0.6.3",
		"typescript": "4.4.4",
		"vite": "^3.0.4",
		"vitest": "^0.18.1",
		"vue-eslint-parser": "^9.0.2",
		"vue-tsc": "^0.39.4"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,vue}": "eslint --cache --fix",
		"*.{js,ts,jsx,tsx,vue,css,md}": "prettier --write"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	}
}