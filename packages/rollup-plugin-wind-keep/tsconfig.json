  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "outDir": "./dist/"
  },
  "include": ["./*.ts"]
}
